<h2>Edit Celebrity</h2>
<form action='/celebrities/{{celebrity._id}}/edit' method='post'>

  <label for='celebrity-name-input'>Celebrity Name</label>
  <input
    id='celebrity-name-input'
    type='text'
    name='name'
    value='{{celebrity.name}}'
  />

  <label for='celebrity-occupation-input'>Celebrity Occupation</label>
  <input
    id='celebrity-occupation-input'
    type='text'
    name='occupation'
    value='{{celebrity.occupation}}'
  />

  <label for='celebrity-catchphrase-input'>Celebrity Catchphrase</label>
  <input
    id='celebrity-catchphrase-input'
    type='text'
    name='catchPhrase'
    value='{{celebrity.catchPhrase}}'
  />
  <button>Edit Celebrity</button>
</form>